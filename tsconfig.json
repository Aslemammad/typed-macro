{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@typed-macro/shared": ["packages/shared/src"],
      "@typed-macro/core": ["packages/core/src"],
      "@typed-macro/runtime": ["packages/runtime/src"],
      "@typed-macro/test-utils": ["packages/test-utils/src"],
      "vite-plugin-macro": ["packages/wrapper-vite/src"],
      // "webpack-macro-loader": ["packages/wrapper-webpack/src"],
    },
    "noEmit": true
  },
  "include": ["packages/*/src", "packages/*/tests", "packages/*/fixtures"]
}
